# Stage 1: build static assets
FROM node:20-alpine AS build
WORKDIR /app
COPY portal/package*.json ./
RUN npm ci
COPY portal ./
RUN npm run build

# Stage 2: serve static assets with Caddy
FROM caddy:2-alpine
WORKDIR /srv
COPY --from=build /app/dist /srv
EXPOSE 5173
CMD ["caddy","file-server","--root","/srv","--listen","0.0.0.0:5173"]
