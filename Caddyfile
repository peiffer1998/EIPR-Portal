{
  email you@example.com
  auto_https off
}

:80 {
  encode gzip

  @assets {
    path *.js *.css *.woff *.woff2 *.svg *.png *.jpg *.jpeg *.gif *.webp
  }
  header @assets Cache-Control "public, max-age=31536000, immutable"

  @health path /health /api/v1/health
  respond @health 200

  handle /api/* {
    reverse_proxy api:8000
  }

  handle {
    reverse_proxy portal:5173
  }
}
